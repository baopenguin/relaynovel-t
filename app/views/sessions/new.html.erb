<div class="text-center login-account">
  <h1 class="mb-0">ログインフォーム</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス', class:'form-color' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード', class:'form-color' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn login-account-btn', style:'font-weight:bold;' %>
    <% end %>
  </div>
</div>

<div class="text-center">
  <p class="mt-3">アカウントをお持ちでない方は<%= link_to 'こちらからアカウント登録', signup_path %></p>
</div>