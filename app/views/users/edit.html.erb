<div class="text-center login-account">
  <h1>プロフィール編集フォーム</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
    
      <div class="form-group">
        <%= f.label :name, 'お名前', class:'form-color' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, 'メールアドレス', class:'form-color' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :self_introduction, '自己紹介文', class:'form-color' %>
        <%= f.text_area :self_introduction, id: "input-textthree", class: 'form-control', rows: "5", placeholder: '500文字まで入力できます' %>
        <p id="counter" class="mt-1 text-right font-weight-bold jcount">現在 0 文字</p>
      </div>
    
       <div class="form-group">
        <%= f.label :twitter, 'Twitterアカウント', class:'form-color' %>
        <%= f.text_field :twitter, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, '新しいパスワード', class:'form-color' %>
        <%= f.password_field :password, class: 'form-control', placeholder: '変更しない場合は空白' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, '確認用パスワード', class:'form-color' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '変更しない場合は空白' %>
      </div>
      
      <%= f.hidden_field :checkbox_user, :value => true %>
      
      <%= f.submit 'この内容で編集する', class: 'btn login-account-btn' %>
    <% end %>
    
    <%= link_to '退会する', user_path(current_user), class: 'btn taikai btn-block delete-button mt-2', style:'margin: 0 auto', data: {confirm: "本当に退会しますか？" }, method: :delete %>
    
  </div>
</div>